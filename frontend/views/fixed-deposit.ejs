<!DOCTYPE html>
<html lang="en-US" dir="ltr">

<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <script src="vendors/@popperjs/popper.min.js"></script>
  <script src="vendors/bootstrap/bootstrap.min.js"></script>
  <script src="vendors/is/is.min.js"></script>
  <script src="https://polyfill.io/v3/polyfill.min.js?features=window.scroll"></script>
  <script src="vendors/fontawesome/all.min.js"></script>
  <script src="assets/js/theme.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
  <script src="assets/js/product.js"></script>
  <link href="https://fonts.googleapis.com/css2?family=Raleway:wght@200;300;400;500;600;700;800&amp;display=swap"
    rel="stylesheet">
  <title>Finance Aggregator</title>
  <link rel="apple-touch-icon" sizes="180x180" href="assets/img/favicons/apple-touch-icon.png">
  <link rel="icon" type="image/png" sizes="32x32" href="assets/img/favicons/favicon-32x32.png">
  <link rel="icon" type="image/png" sizes="16x16" href="assets/img/favicons/favicon-16x16.png">
  <link rel="shortcut icon" type="image/x-icon" href="assets/img/favicons/favicon.ico">
  <link rel="manifest" href="assets/img/favicons/manifest.json">
  <meta name="msapplication-TileImage" content="assets/img/favicons/mstile-150x150.png">
  <meta name="theme-color" content="#ffffff">
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=PT+Sans:wght@700&display=swap" rel="stylesheet">
  <link href="assets/css/theme.css" rel="stylesheet" />
  <link href="assets/css/fixed-deposit.css" rel="stylesheet" />
</head>
<body>
  <script>
      function showOptions(){
        var nonCumulative = document.getElementById("noncumulative").checked
        var text = document.getElementById("text")
        if (nonCumulative == false){
            document.getElementById("monthly").checked = false 
            document.getElementById("quarterly").checked = false 
            document.getElementById("semiAnnually").checked = false
        }
    }

    async function bookmarkOption(option, input){
      
      let email = localStorage.getItem('email')
      console.log("sending from frontend ")
      console.log("Email is " + email)
      alert("here" + email)
      const body = { email: email, output: option, input: input }
      await axios
          .post(
              "http://localhost:9001/user/bookmark/fd", body
          )
          .then((res) => {
              result = res.data.status;
              alert("Bookmark added")
              console.log("SUCCESSFUL")
          })
          .catch((error) => {
              console.error(error);
      });
    }
  </script>

  <!-- ===============================================-->
  <!--    Main Content-->
  <!-- ===============================================-->
  <main class="main" id="top">
    <nav class="navbar navbar-expand-lg navbar-light fixed-top py-3 d-block"
      data-navbar-on-scroll="data-navbar-on-scroll">
      <div class="container"><a class="navbar-brand" href="index.html"><img src="assets/img/gallery/logo.png"
            height="45" alt="logo" /></a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent"
          aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation"><span
            class="navbar-toggler-icon"> </span></button>
        <div class="collapse navbar-collapse border-top border-lg-0 mt-4 mt-lg-0" id="navbarSupportedContent">
          <ul class="navbar-nav ms-auto pt-2 pt-lg-0 font-base">
            <li class="nav-item px-2"><a class="nav-link" aria-current="page" href="index.html">Home</a></li>
            <li class="nav-item px-2"><a class="nav-link" href="#services">Our Services</a></li>
            <li class="nav-item px-2"><a class="nav-link" href="#findUs">Find Us</a></li>
          </ul>
          <div class="dropdown d-none d-lg-block">
            <button class="btn bg-soft-warning ms-2" id="dropdownMenuButton1" type="submit" data-bs-toggle="dropdown"
              aria-expanded="false"><i class="fas fa-search text-warning"></i></button>
            <div class="dropdown-menu dropdown-menu-lg-end p-0 rounded" aria-labelledby="dropdownMenuButton1"
              style="top:55px">
              <form>
                <input class="form-control border-200" type="search" placeholder="Search" aria-label="Search"
                  style="background:#FDF1DF;" />
              </form>
            </div>
          </div><a class="btn btn-primary order-1 order-lg-0 ms-lg-3" href="#!">Contact Us</a>
          <form class="d-flex my-3 d-block d-lg-none">
            <input class="form-control me-2 border-200 bg-light" type="search" placeholder="Search"
              aria-label="Search" />
            <button class="btn btn-outline-primary" type="submit">Search</button>
          </form>
        </div>
      </div>
    </nav>
    <section class="py-7" id="services" container-xl="container-xl">
      <div class="container">
        <div class="row h-600 justify-content-center">
          <div class="col-md-3 pt-4 px-md-2 px-lg-2">
            <div class="card h-100 px-lg-3 card-span">
              <div class="card-body d-flex flex-column justify-content-around">
                <div class="text-center pt-5"><img class="img-fluid" src="assets/img/icons/Shape 1.png" width="55"
                    alt="..." />
                  <h3 class="my-4">Fixed Deposit</h3>
                </div>
                <div>
                  <form id="form" action="/fixed-deposit" method="post">
                    <label for="filter">Filter Criteria</label>
                    <div class="flex">
                        <span>Interest Amount</span>
                        <% if(typeof(amount) == 'undefined') { %> <input id="amount" type="radio" name="filterType" value="amount" <%= 1 ? "checked" : "" %>/>
                        <% } else { %> <input id="amount" type="radio" name="filterType" value="amount" <%= amount ? "checked" : "" %> />
                           <% } %>
                    </div>
                    <br>
                    <div class="flex">
                        <span>Safety</span>
                        <% if(typeof(safety) == 'undefined') { %> <input  id="safety" type="radio" name="filterType" value="safety"/>
                        <% } else { %> <input  id="safety" type="radio" name="filterType" value="safety" <%= safety ? "checked" : "" %> />
                          <% } %>
                    </div>
                    <hr>
                    <br>
                    <label for="principal">Principal</label>
                    <div class="flex">
                      <span class="currency">&#8377</span>
                      <% if(typeof(principal) == 'undefined') { %> <input id="principal" name="principal" type="text" maxlength="15" required />
                      <% } else { %> <input id="principal" name="principal" type="text" maxlength="15"
                            value="<%= principal %>" required /><% } %>
                    </div>
                    <label for="tenure" class="mt-3">Total Tenure</label>
                    <label for="years" class="mt-3">Years</label>
                    <div class="flex">
                      <span class="currency"> </span>
                      <% if(typeof(years) == 'undefined') { %> <input id="years" name="years" type="number" min="0" max="10" value="0" />
                      <% } else { %> <input id="years" name="years" type="number" min="0" max="10" value="<%= years %>" />
                         <% } %>
                    </div>
                    <label for="months" class="mt-3">Months</label>
                    <div class="flex">
                      <span class="currency"> </span>
                      <% if(typeof(months) == 'undefined') { %> <input id="months" name="months" type="number" min="0" max="120" value="0" />
                      <% } else { %> <input id="months" name="months" type="number" min="0" max="120" value="<%= months %>" />
                         <% } %>
                    </div>
                    <label for="days" class="mt-3">Days</label>
                    <div class="flex">
                      <span class="currency"> </span>
                      <% if(typeof(days) == 'undefined') { %> <input id="days" name="days" type="number" min="0" max="3650" value="0" />
                      <% } else { %> <input id="days" name="days" type="number" min="0" max="3650" value="<%= days %>" />
                         <% } %>
                    </div>
                    <br>
                    <label for="age" class="mt-3">Age Criteria</label>
                    <div class="flex">
                        <span>Age > 60</span>
                        <% if(typeof(senior) == 'undefined') { %> <input id="senior" name="senior" type="checkbox"/>
                      <% } else { %> <input id="senior" name="senior" type="checkbox" <%= senior ? "checked" : "" %> />
                         <% } %>
                    </div>
                    <br>
                    <label for="interest" class="mt-3">Interest Type</label>
                    <div class="flex">
                        <span>Cumulative</span>
                        <% if(typeof(cumulative) == 'undefined') { %> <input onchange="showOptions()" id="cumulative" type="radio" name="interestType" value="cumulative" <%= 1 ? "checked" : "" %> />
                        <% } else { %> <input onchange="showOptions()" id="cumulative" type="radio" name="interestType" value="cumulative" <%= cumulative ? "checked" : "" %> />
                           <% } %>
                    </div>
                    <div class="text-center">
                      <h4>OR</h4>
                  </div>
                   
                    <div class="flex">
                        <span>Non-cumulative</span>
                        <% if(typeof(noncumulative) == 'undefined') { %> <input onchange="showOptions()" id="noncumulative" type="radio" name="interestType" value="noncumulative"  />
                        <% } else { %> <input onchange="showOptions()" id="noncumulative" type="radio"  name="interestType" value="noncumulative" <%= noncumulative ? "checked" : "" %> />
                          <% } %>
                    </div>
                    <br>
                    <div style="display:block" id="text" class="flex">
                        <label for="interest" class="mt-3">Period to receive interest</label>
                        <br>
                        <div class="flex">
                            <span>Monthly</span>
                            <% if(typeof(monthly) == 'undefined') { %> <input  id="monthly" type="radio" name="frequency" value="monthly"/>
                            <% } else { %> <input id="monthly" type="radio" name="frequency" value="monthly" <%= monthly ? "checked" : "" %> />
                              <% } %>
                        </div>
                        <br>
                        <div class="flex">
                            <span>Quarterly</span>
                            <% if(typeof(quarterly) == 'undefined') { %> <input id="quarterly" type="radio" name="frequency" value="quarterly"/>
                            <% } else { %> <input id="quarterly" type="radio" name="frequency" value="quarterly" <%= quarterly ? "checked" : "" %> />
                              <% } %>
                        </div>
                        <br>
                        <div class="flex">
                            <span>Semi-annually</span>
                            <% if(typeof(semiannually) == 'undefined') { %> <input  id="semiannually" type="radio" name="frequency" value="semiannually"/>
                            <% } else { %> <input  id="semiannually" type="radio" name="frequency" value="semiannually" <%= semiAnnually ? "checked" : "" %> />
                              <% } %>
                        </div>
                        <br>
                      
                    </div>
                    <div class="text-center mb-5">
                      <button class="btn btn-danger px-4" type="submit">Submit</button>
                  </div>
                  </form>
                </div>
                <br>
              </div>
            </div>
          </div>
          <div class="col-md-9 pt-4 px-md-2 px-lg-3">
            <div class="card px-lg-3 card-span">
              <div class="card-body d-flex flex-column justify-content-around">
                <div class="row">
                  <div class="card bg-light border-0">
                    <div class="row py-2">
                      <div class="col-sm-3 text-center">
                        <h5 class="fw-bolder mb-0">Bank Name</h5>
                      </div>
                      <div class="col-sm-2 text-center">
                        <h5 class="fw-bolder mb-0">Interest Rate</h5>
                      </div>
                      <div class="col-sm-2 text-center">
                        <h5 class="fw-bolder mb-0">Interest</h5>
                      </div>
                      <div class="col-sm-2 text-center">
                        <h5 class="fw-bolder mb-0">Slab (in days)
                        </h5>
                      </div>
                      <div class="col-sm-2 text-center">
                        <h5 class="fw-bolder mb-0">Type
                        </h5>
                      </div>
                    </div>
                </div>
                <% for (var i = 0; i < result.length;  i++ ) { %>
                  <div class="card mt-2">
                    <div class="py-3 px-2 row">
                      <div class="col-sm-2 d-flex justify-content-center text-center align-items-center">
                        <h5 class="my-0" style="font-family:'Times New Roman', Times, serif">
                          <%= result[i]['name'] %>  
                        </h5>
                      </div>
                      <div class="col-sm-2 d-flex justify-content-center text-center align-items-center">
                        <p style="font-family: 'PT Sans';"><%= result[i]['interestRate'] %></p>
                      </div>
                      <div class="col-sm-2 d-flex justify-content-center text-center align-items-center">
                        <h5 style="font-family: 'PT Sans';"><span
                            style="font-family: Arial, Helvetica, sans-serif;">&#8377</span> <%= result[i]['interest'] %>  </h5>
                      </div>
                      <div class="col-sm-2 d-flex justify-content-center text-center align-items-center">
                        <h5 style="font-family: 'PT Sans';"><span
                            style="font-family: Arial, Helvetica, sans-serif;"></span> <%= result[i]['slab'] %>  </h5>
                      </div>
                      <div class="col-sm-2 d-flex justify-content-center text-center align-items-center">
                        <h5 style="font-family: 'PT Sans';"><span
                            style="font-family: Arial, Helvetica, sans-serif;"></span> <%= result[i]['type'] %>  </h5>
                      </div>
                      <div class="col-sm-2 d-flex flex-column align-items-center justify-content-center">
                        <div class="d-flex justify-content-center"><i
                            class="far fa-solid fa-star text-secondary fw-light"></i></div>
                        <div class="text-secondary text-center">
                          <h6 onclick="bookmarkOption((<%= JSON.stringify(result[i]) %>), (<%= JSON.stringify(input) %>))" class="mb-0 mt-2 text-secondary fw-light">Bookmark</h6>
                        </div>
                      </div>
                    </div>
                  </div>
                <% } %>
                </div>
              </div>
            </div>
          </div>
    </section>
  </main>
</body>
</html>